<%- include('partials/header') %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label><br>
        <input class="form-control" id="postTitle" type="text" name="postTitle" placeholder="Your title">
        
    </div>
    <div class="form-group">
        <label for="postBody">Post</label><br>
        <textarea class="form-control" rows="5" id="postBody" type="text" name="postBody" ></textarea>
        
    </div>
   <button class="btn btn-primary" type="submit" name="submit">Publish</button>
</form>
<%- include('partials/footer') %>